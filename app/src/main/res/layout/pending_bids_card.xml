<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingTop="2dp"
    android:paddingBottom="3dp"
    android:paddingRight="8dp">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardPending"
    app:cardElevation="4dp"
    app:cardCornerRadius="4dp"
    app:cardPreventCornerOverlap="false"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout"
        android:padding="4dp">

        <com.example.aditya.myapplication.view.CircularImageView
            android:id="@+id/imageView2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/red"
            android:layout_marginTop="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Incorporation of Pvt. Ltd."
            android:textStyle="bold"
            android:paddingBottom="8dp"
            android:id="@+id/textView20"
            android:layout_below="@+id/textView29" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bid placed 3h ago"
            android:id="@+id/textView29"
            android:layout_marginLeft="15dp" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending"
            android:textColor="#F9A825"
            android:layout_above="@+id/textView20"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"/>

        <View
            android:id="@+id/iv"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/textView20"
            android:background="#F5F5F5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:paddingTop="4dp"
            android:text="2 "
            android:textStyle="bold"
            android:id="@+id/textView21"
            android:layout_below="@+id/iv" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Directors"
            android:paddingTop="4dp"
            android:id="@+id/textView24"
            android:layout_above="@+id/textView22"
            android:layout_below="@+id/iv"
            android:layout_marginLeft="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="1 lac "
            android:textStyle="bold"
            android:id="@+id/textView22"
            android:layout_below="@+id/textView21" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="paid capital"
            android:id="@+id/textView25"
            android:layout_above="@+id/textView23"
            android:layout_marginLeft="40dp"
            android:layout_below="@+id/textView21" />

        <ImageView
            android:id="@+id/iamount"
            android:layout_toEndOf="@+id/textView31"
            android:layout_below="@+id/textView24"
            android:layout_marginLeft="50dp"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/amountdisplay"/>

        <TextView
            android:id="@+id/amount"
            android:text="2500"
            android:textColor="@color/grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:layout_below="@+id/textView24"
            android:layout_toEndOf="@+id/iamount" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Delhi"
            android:textStyle="bold"
            android:id="@+id/textView23"
            android:layout_below="@+id/textView31" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Budget upto INR"
            android:id="@+id/textView30"
            android:layout_below="@+id/textView22" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="2000"
            android:textStyle="bold"
            android:id="@+id/textView31"
            android:layout_marginLeft="110dp"
            android:layout_below="@+id/textView22" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:visibility="gone"
            android:text="Comments that the user has written"
            android:id="@+id/textView14"
            android:layout_below="@+id/textView23"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
   </LinearLayout>
