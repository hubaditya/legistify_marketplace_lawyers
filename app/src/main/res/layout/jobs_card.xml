<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingTop="2dp"
    android:paddingBottom="3dp"
    android:paddingRight="8dp">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardView1"
    app:cardElevation="4dp"
    app:cardCornerRadius="4dp"
    app:cardPreventCornerOverlap="false">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout"
        android:padding="4dp">

        <com.example.aditya.myapplication.view.CircularImageView
            android:id="@+id/imageView1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/image"
            android:layout_marginTop="3.5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Incorporation of Pvt. Ltd."
            android:textStyle="bold"
            android:paddingBottom="8dp"
            android:id="@+id/textView20"
            android:layout_below="@+id/textView29" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:text="Posted 3h ago"
            android:id="@+id/textView29"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active"
            android:textColor="#4CAF50"
            android:layout_above="@+id/textView20"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/button"
            android:layout_marginLeft="10dp"/>

        <View
            android:id="@+id/iv"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/textView20"
            android:background="#F5F5F5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:paddingTop="8dp"
            android:textStyle="bold"
            android:text="2 "
            android:id="@+id/textView21"
            android:layout_below="@+id/iv" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Directors"
            android:paddingTop="8dp"
            android:id="@+id/textView24"
            android:layout_above="@+id/textView22"
            android:layout_below="@+id/iv"
            android:layout_marginLeft="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="1 lac "
            android:textStyle="bold"
            android:id="@+id/textView22"
            android:layout_below="@+id/textView21" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="paid capital"
            android:id="@+id/textView25"
            android:layout_above="@+id/textView23"
            android:layout_marginLeft="40dp"
            android:layout_below="@+id/textView21" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Delhi"
            android:textStyle="bold"
            android:id="@+id/textView23"
            android:layout_below="@+id/textView31" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Budget upto INR"
            android:id="@+id/textView30"
            android:layout_below="@+id/textView22" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="2000"
            android:textStyle="bold"
            android:id="@+id/textView31"
            android:layout_marginLeft="110dp"
            android:layout_below="@+id/textView22" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="Bid"
            android:padding="4dp"
            android:background="@drawable/rectangle"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:id="@+id/button"
            android:layout_alignBottom="@+id/textView23"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
</LinearLayout>
