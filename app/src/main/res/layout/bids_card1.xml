<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingRight="4dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardView2"
            app:cardElevation="4dp"
            app:cardCornerRadius="4dp"
            app:cardPreventCornerOverlap="false">

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relativeLayout"
            android:padding="4dp">

        <TextView
            android:id="@+id/User"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Project Details"
            android:padding="8dp"
            android:textColor="@color/colorPrimary"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <View
            android:id="@+id/v3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/User"
            android:background="#F5F5F5"/>

        <com.example.aditya.myapplication.view.CircularImageView
            android:id="@+id/imageView1"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/v3"
            android:layout_marginLeft="12dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/image"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Aditya Srivastava"
            android:textColor="#000000"
            android:id="@+id/textView"
            android:layout_alignTop="@+id/imageView1"
            android:layout_alignStart="@+id/textService"
            android:layout_above="@+id/textService" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:paddingTop="3dp"
            android:textStyle="bold"
            android:text="Register Private Limited Company"
            android:layout_marginLeft="10dp"
            android:id="@+id/textService"
            android:layout_alignBottom="@+id/imageView1"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@+id/imageView1" />

        <TextView
            android:layout_below="@+id/imageView1"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="2"
            android:paddingLeft="3dp"
            android:id="@+id/textView2"
            android:layout_marginLeft="30dp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_below="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:text="Directors"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="10000"
            android:textStyle="bold"
            android:textColor="#000000"
            android:id="@+id/textView4"
            android:layout_toEndOf="@+id/textView1"
            android:layout_marginStart="41dp"
            android:layout_alignTop="@+id/textView2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_below="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:text="Paid Capital"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="30000"
            android:textStyle="bold"
            android:textColor="#000000"
            android:id="@+id/textView6"
            android:layout_toEndOf="@+id/textView3"
            android:layout_marginStart="41dp"
            android:layout_alignTop="@+id/textView4" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_below="@+id/textView6"
            android:layout_alignStart="@+id/textView6"
            android:text="Budget"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Delhi"
            android:textColor="#000000"
            android:textStyle="bold"
            android:id="@+id/textView8"
            android:layout_below="@+id/textView1"
            android:layout_alignStart="@+id/textView1"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_below="@+id/textView8"
            android:layout_alignStart="@+id/textView8"
            android:text="Location"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="25/05/16"
            android:textStyle="bold"
            android:textColor="#000000"
            android:id="@+id/textView10"
            android:layout_toEndOf="@+id/textView7"
            android:layout_marginStart="41dp"
            android:layout_alignTop="@+id/textView8" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_below="@+id/textView10"
            android:layout_alignStart="@+id/textView10"
            android:text="Timeline"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:text="Comments that the user has written"
            android:paddingBottom="8dp"
            android:paddingRight="4dp"
            android:layout_marginTop="10dp"
            android:id="@+id/textView11"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/textView9"/>

        </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</RelativeLayout>