<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingRight="4dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cardView2"
            app:cardElevation="4dp"
            app:cardCornerRadius="4dp"
            app:cardPreventCornerOverlap="false">

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/relativeLayout"
                android:padding="4dp">

                <TextView
                    android:id="@+id/User"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registration of Private Limited"
                    android:padding="8dp"
                    android:textColor="@color/colorPrimary"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

                <View
                    android:id="@+id/v3"
                    android:layout_width="300dp"
                    android:layout_height="2dp"
                    android:layout_below="@+id/User"
                    android:background="#F5F5F5"/>

                <com.example.aditya.myapplication.view.CircularImageView
                    android:id="@+id/imageView1"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/v3"
                    android:layout_marginLeft="12dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/image"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Aditya Srivastava"
                    android:textColor="#000000"
                    android:id="@+id/textView"
                    android:layout_alignTop="@+id/imageView1"
                    android:layout_toEndOf="@+id/imageView1"
                    android:layout_marginLeft="15dp"/>

                <LinearLayout
                    android:layout_below="@+id/textView"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_alignStart="@+id/textView"
                    android:layout_alignBottom="@+id/imageView3">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:src="@drawable/call"
                        android:id="@+id/imageView13"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_marginStart="-20dp"/>

                    <ImageView
                        android:id="@+id/imageView14"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:src="@drawable/email"
                        android:layout_weight="1"
                        android:layout_gravity="center"/>

                    <ImageView
                        android:id="@+id/imageView15"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/sms"
                        android:layout_weight="1"
                        android:layout_gravity="center"/>


                </LinearLayout>



                <TextView
                    android:layout_below="@+id/imageView1"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:text="2"
                    android:paddingLeft="3dp"
                    android:id="@+id/textView2"
                    android:layout_marginLeft="30dp" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_below="@+id/textView2"
                    android:layout_alignStart="@+id/textView2"
                    android:text="Directors"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="10000"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:id="@+id/textView4"
                    android:layout_toEndOf="@+id/textView1"
                    android:layout_marginStart="41dp"
                    android:layout_alignTop="@+id/textView2" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_below="@+id/textView4"
                    android:layout_alignStart="@+id/textView4"
                    android:text="Paid Capital"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="30000"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:id="@+id/textView6"
                    android:layout_toEndOf="@+id/textView3"
                    android:layout_marginStart="41dp"
                    android:layout_alignTop="@+id/textView4" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_below="@+id/textView6"
                    android:layout_alignStart="@+id/textView6"
                    android:text="Budget"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Delhi"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:id="@+id/textView8"
                    android:layout_below="@+id/textView1"
                    android:layout_alignStart="@+id/textView1"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_below="@+id/textView8"
                    android:layout_alignStart="@+id/textView8"
                    android:text="Location"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="25/05/16"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:id="@+id/textView10"
                    android:layout_toEndOf="@+id/textView7"
                    android:layout_marginStart="41dp"
                    android:layout_alignTop="@+id/textView8" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_below="@+id/textView10"
                    android:layout_alignStart="@+id/textView10"
                    android:text="Timeline"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="bold"
                    android:text="Comments that the user has written"
                    android:paddingBottom="16dp"
                    android:paddingRight="4dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/textView11"
                    android:layout_marginLeft="30dp"
                    android:layout_below="@+id/textView9"/>

                <View
                    android:id="@+id/vbid"
                    android:layout_width="300dp"
                    android:layout_height="2dp"
                    android:layout_below="@+id/textView11"
                    android:background="#F5F5F5"/>

                <ImageView
                    android:id="@+id/iamount"
                    android:paddingTop="28dp"
                    android:layout_width="24dp"
                    android:layout_height="45dp"
                    android:src="@drawable/amount"
                    android:layout_below="@+id/vbid"
                    android:layout_marginLeft="30dp" />

                <TextView
                    android:id="@+id/amount"
                    android:layout_toEndOf="@+id/iamount"
                    android:layout_marginLeft="30dp"
                    android:textStyle="bold"
                    android:paddingRight="4dp"
                    android:layout_marginTop="25dp"
                    android:text="3000"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/vbid" />


                <ImageView
                    android:id="@+id/ifollowup"
                    android:paddingTop="25dp"
                    android:layout_width="24dp"
                    android:layout_height="45dp"
                    android:src="@drawable/followup"
                    android:layout_below="@+id/amount"
                    android:layout_marginLeft="30dp" />

                <TextView
                    android:id="@+id/followup"
                    android:layout_toEndOf="@+id/iamount"
                    android:layout_marginLeft="30dp"
                    android:textStyle="bold"
                    android:text="Legistify is an online legal facilitation platform with an aim to bring in disruption and transparency in the legal system of our nation."
                    android:paddingRight="4dp"
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/amount" />

                <ImageView
                    android:id="@+id/icomment"
                    android:paddingTop="25dp"
                    android:layout_width="24dp"
                    android:layout_height="45dp"
                    android:src="@drawable/comments"
                    android:layout_below="@+id/followup"
                    android:layout_marginLeft="30dp" />

                <TextView
                    android:id="@+id/comments"
                    android:layout_toEndOf="@+id/iamount"
                    android:layout_marginLeft="30dp"
                    android:paddingBottom="12dp"
                    android:paddingRight="4dp"
                    android:layout_marginTop="25dp"
                    android:textStyle="bold"
                    android:text="I have extensive experience in handling legal affairs and well versed with various regulations, clauses and best legal practices."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/followup" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</RelativeLayout>