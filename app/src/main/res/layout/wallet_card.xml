<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingTop="2dp"
    android:paddingBottom="3dp"
    android:paddingRight="8dp">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardDetails"
    app:cardCornerRadius="4dp"
    app:cardPreventCornerOverlap="false"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginStart="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/amountText"
            android:textColor="#F9A825"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="INR 400 due"/>

        <View
            android:layout_marginTop="6dp"
            android:id="@+id/iv3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/amountText"
            android:background="#F5F5F5"/>

        <TextView
            android:layout_marginTop="3dp"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/iv3"
            android:id="@+id/payee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Payee"/>

        <TextView
            android:layout_marginTop="3dp"
            android:layout_marginRight="10dp"
            android:id="@+id/payeeText"
            android:layout_below="@+id/iv3"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Aditya Srivastava"/>

        <View
            android:layout_marginTop="6dp"
            android:id="@+id/iv"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/payeeText"
            android:background="#F5F5F5"/>

        <TextView
            android:layout_marginTop="3dp"
            android:layout_below="@+id/iv"
            android:id="@+id/service"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Service"/>

        <TextView
            android:layout_marginTop="3dp"
            android:layout_marginRight="10dp"
            android:id="@+id/serviceText"
            android:layout_alignEnd="@+id/payeeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Trademark"
            android:layout_below="@+id/iv" />

        <View
            android:layout_marginTop="6dp"
            android:id="@+id/iv2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/serviceText"
            android:background="#F5F5F5"/>

        <TextView
            android:layout_marginTop="3dp"
            android:id="@+id/statement"
            android:layout_below="@+id/iv2"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Statement Balance"/>

        <TextView
            android:layout_marginTop="3dp"
            android:layout_alignEnd="@+id/payeeText"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/iv2"
            android:id="@+id/statementText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="INR 1200"/>

        <View
            android:layout_marginTop="6dp"
            android:id="@+id/iv4"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/statementText"
            android:background="#F5F5F5"/>

        <TextView
            android:layout_marginTop="3dp"
            android:layout_below="@+id/iv4"
            android:id="@+id/totalPayable"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Total Payable Amount"/>

        <TextView
            android:layout_marginTop="3dp"
            android:layout_below="@+id/iv4"
            android:layout_marginRight="10dp"
            android:layout_alignEnd="@+id/payeeText"
            android:id="@+id/totalPayableText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="INR 1600"/>

        <View
            android:layout_marginTop="6dp"
            android:id="@+id/iv5"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/totalPayable"
            android:background="#F5F5F5"/>

        <TextView
            android:layout_marginTop="3dp"
            android:layout_below="@+id/iv5"
            android:id="@+id/date"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Payment Date" />

        <TextView
            android:layout_marginTop="3dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/iv5"
            android:id="@+id/dateText"
            android:layout_alignEnd="@+id/payeeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="15/05/16" />

        <View
            android:layout_marginTop="6dp"
            android:id="@+id/iv6"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/date"
            android:background="#ffffff"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
</LinearLayout>

